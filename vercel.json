{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "crons": [
    {
      "path": "/api/garmin-token-maintenance",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/garmin-webhook-process",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/proactive-insights-process",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/daily-morning-email",
      "schedule": "0 13 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
